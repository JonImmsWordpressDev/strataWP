{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "strata-basic/hero",
  "title": "Hero Section",
  "category": "design",
  "icon": "cover-image",
  "description": "A hero section with title, description, and call-to-action",
  "keywords": ["hero", "banner", "cta"],
  "supports": {
    "align": ["wide", "full"],
    "html": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "default": "Welcome to StrataWP"
    },
    "description": {
      "type": "string",
      "default": "Build faster, better WordPress themes"
    },
    "buttonText": {
      "type": "string",
      "default": "Get Started"
    },
    "buttonUrl": {
      "type": "string",
      "default": "#"
    },
    "backgroundImage": {
      "type": "string"
    },
    "overlayOpacity": {
      "type": "number",
      "default": 0.5
    }
  },
  "editorScript": "file:./edit.tsx",
  "render": "file:./render.php",
  "style": "file:./style.css"
}
