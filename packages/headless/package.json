{
  "name": "@stratawp/headless",
  "version": "0.8.0",
  "description": "Headless WordPress utilities for StrataWP - REST API client, hooks, and framework integrations",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js"
    },
    "./next": {
      "types": "./dist/next.d.ts",
      "import": "./dist/next.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "wordpress",
    "headless",
    "rest-api",
    "graphql",
    "nextjs",
    "react",
    "decoupled",
    "stratawp"
  ],
  "author": "StrataWP",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "ky": "^1.7.1",
    "swr": "^2.2.4",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "next": ">=13.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  }
}
