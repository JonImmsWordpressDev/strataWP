{
  "name": "@stratawp/testing",
  "version": "0.1.0",
  "description": "Comprehensive testing utilities for StrataWP themes",
  "author": "Jon Imms",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "keywords": [
    "wordpress",
    "testing",
    "vitest",
    "playwright",
    "e2e",
    "unit-testing",
    "stratawp"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JonImmsWordpressDev/StrataWP.git",
    "directory": "packages/testing"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./vitest": {
      "types": "./dist/vitest.d.ts",
      "import": "./dist/vitest.js"
    },
    "./playwright": {
      "types": "./dist/playwright.d.ts",
      "import": "./dist/playwright.js"
    }
  },
  "files": [
    "dist",
    "vitest.config.ts",
    "playwright.config.ts"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "lint": "eslint src"
  },
  "dependencies": {
    "@testing-library/react": "^14.1.2",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/user-event": "^14.5.1",
    "@vitest/ui": "^1.0.4",
    "vitest": "^1.0.4",
    "jsdom": "^23.0.1",
    "happy-dom": "^12.10.3",
    "@playwright/test": "^1.40.1",
    "@wordpress/jest-preset-default": "^11.21.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@vitest/coverage-v8": "^1.0.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
