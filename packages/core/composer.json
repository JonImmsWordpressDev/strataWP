{
  "name": "wp-forge/core",
  "description": "Core PHP framework for WP-Forge themes",
  "type": "library",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Jon Imms",
      "email": "jon@example.com"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "WPForge\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "WPForge\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs",
    "phpstan": "phpstan analyze"
  }
}
